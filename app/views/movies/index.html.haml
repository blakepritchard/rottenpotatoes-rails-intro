-#  This file is app/views/movies/index.html.haml

= form_tag movies_path, :id=>'ratings_form', :method => :get do
  Include:
  - @all_ratings.each do |rating|
    = rating
    = check_box_tag "ratings[#{rating}]",  1, @selected_ratings.include?("#{rating}")
  = submit_tag 'Refresh', :id=>'ratings_submit'

%h1 All Movies

%table#movies
  %thead
    %tr
      %th{class: ['title'==@order_by && "hilite"]}= link_to 'Movies', movies_path( {:order_by => :title}) 
      %th{class: ['rating'==@order_by && "hilite"]}= link_to 'Rating', movies_path( {:order_by => :rating} )      
      %th{class: ['release_date'==@order_by && "hilite"]}= link_to 'Release Date', movies_path( {:order_by => :release_date} )
      %th= 'More Info'
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path

